{
	"name": "sopia",
	"version": "1.10.5",
	"description": "A Spooncast manager A.I Program",
	"main": "main.js",
	"scripts": {
		"start": "electron . DEBUG",
		"build": " npm run build:docs && npm run pbuild:win32",
		"build:docs": "node docs.js",
		"pbuild:win32": "electron-packager . SOPIA --asar --overwrite --platform=win32 --arch=ia32 --out=release-builds --icon=\".\\sopia.ico\" --ignore=release-builds --ignore=bundles --ignore=test --ignore=media --ignore=SOPIAUpdater"
	},
	"build": {
		"productName": "SOPIA",
		"appId": "com.electron.sopia",
		"asar": true,
		"protocols": {
			"name": "sopia",
			"schemes": [
				"helloSOPIA"
			]
		},
		"win": {
			"target": [
				"zip",
				"nsis"
			],
			"icon": "./icon.ico"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"directories": {
			"output": "dist/",
			"app": "."
		}
	},
	"repository": "https://github.com/sopia-bot/SOPIA",
	"keywords": [],
	"author": "sopia-bot",
	"license": "CC0-1.0",
	"devDependencies": {
		"electron": "^5.0.13",
		"electron-packager": "^15.1.0"
	},
	"dependencies": {
		"@sanillajs/sanilla": "^1.0.4",
		"@sopia-bot/core": "^2.1.6",
		"axios": "^0.21.1",
		"request": "^2.88.2",
		"rimraf": "^3.0.2",
		"typescript-json-serializer": "^3.4.4"
	}
}
